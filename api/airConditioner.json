        "parameters": [
          {
            "name": "serviceId",
            "description": "サービスID。取得対象スマートデバイス",
            "in": "formData",
            "required": true,
            "type": "string"
          },
          {
            "name": "temperature",
            "description": "温度設定値。<br> 0〜50 (℃)",
            "in": "formData",
            "required": true,
            "type": "integer",
            "minimum": 0,
            "maximum": 50
