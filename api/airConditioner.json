          {
            "name": "serviceId",
            "description": "サービスID。取得対象スマートデバイス",
            "in": "query",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "スマートデバイスの室温計測値を取得結果を返す。失敗した場合はエラーを返す。",
