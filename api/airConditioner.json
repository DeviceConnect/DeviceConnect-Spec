            "examples": {
              "application/json": {
                "result": 0,
                "product": "Example System",
                "version": "1.0.0",
                "properties": [
                  {
                    "epc": "OperationStatus",
                    "value": "49"
                  },
                  {
                    "epc": "InstallationLocation",
                    "value": "0"
                  }
                ]
              }
            }
          }
        }
