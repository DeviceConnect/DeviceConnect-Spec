            "required": true,
            "type": "string"
          },
          {
            "name": "airflow",
            "description": "風量設定値。<br> 0.0〜1.0",
            "in": "formData",
            "required": false,
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          {
            "name": "airflowauto",
            "description": "風量自動モード設定。<br>\ntrue : 自動モード有効<br>\nfalse : 自動モード無効",
            "in": "formData",
            "required": false,
