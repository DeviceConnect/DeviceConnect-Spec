            "get": {
                "operationId": "settingDateGet",
                "x-type": "one-shot",
                "summary": "スマートデバイスの日時を取得する。",
                "description": "",
                "parameters": [
                    {
                        "name": "serviceId",
                        "description": "サービスID。",
                        "in": "query",
                        "required": true,
                        "type": "string"
