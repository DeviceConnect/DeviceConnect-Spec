                "responses": {
                    "200": {
                        "description": "",
                        "schema": {
                            "$ref": "#/definitions/GetDateSettingResponse"
                        },
                        "examples": {
                            "application/json": {
                                "result": 0,
                                "product": "Example System",
                                "version": "1.0.0",
                                "date": "2017-01-01 12:34:56+0900"
                            }
                        }
                    }
                }
            },
            "put": {
                "operationId": "settingDatePut",
                "x-type": "one-shot",
                "summary": "スマートデバイスの日時の設定依頼を送る。",
                "description": "",
