{
    "swagger": "2.0",
    "basePath": "/gotapi/setting",
    "info": {
        "title": "Setting Profile",
        "version": "2.0.0",
        "description": "スマートデバイスの各種設定状態の取得および設定機能を提供するプロファイル。"
    },
    "consumes": [
        "application/x-www-form-urlencoded",
        "multipart/form-data"
    ],
    "paths": {
        "/sound/volume": {
            "get": {
                "operationId": "settingSoundVolumeGet",
                "x-type": "one-shot",
                "summary": "スマートデバイスの音量を取得する。",
                "description": "",
                "parameters": [
                    {
                        "name": "serviceId",
                        "description": "サービスID。",
                        "in": "query",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "kind",
                        "in": "query",
                        "required": true,
                        "type": "integer",
                        "description": "|Value|Description|\n|:-----|:-----|\n|1|Alarm|\n|2|Voice Volume|\n|3|Ring Alert|\n|4|Incoming Mail Alert|\n|5|Media Player|\n|6|Other|",
                        "enum": [1, 2, 3, 4, 5, 6]
                    }
                ],
                "responses": {
                    "200": {
                        "description": "",
                        "schema": {
                            "$ref": "#/definitions/GetVolumeSettingResponse"
                        },
                        "examples": {
                            "application/json": {
                                "result": 0,
                                "product": "Example System",
                                "version": "1.0.0",
                                "level": 1
                            }
                        }
                    }
                }
            },
            "put": {
                "operationId": "settingSoundVolumePut",
                "x-type": "one-shot",
                "summary": "スマートデバイスの音量の設定依頼を送る。",
                "description": "",
                "parameters": [
                    {
                        "name": "serviceId",
                        "description": "サービスID。",
                        "in": "formData",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "kind",
                        "in": "formData",
                        "required": true,
                        "type": "integer",
                        "description": "|Value|Description|\n|:-----|:-----|\n|1|Alarm|\n|2|Voice Volume|\n|3|Ring Alert|\n|4|Incoming Mail Alert|\n|5|Media Player|\n|6|Other|",
                        "enum": [1, 2, 3, 4, 5, 6]
                    },
                    {
                        "name": "level",
                        "description": "音量を割合で示す。(0.0 <= level <= 1.0)",
                        "in": "formData",
                        "required": true,
                        "type": "number",
                        "minimum": 0.0,
                        "maximum": 1.0
                    }
                ],
                "responses": {
                    "200": {
                        "description": "",
                        "schema": {
                            "$ref": "#/definitions/PutSettingResponse"
                        },
                        "examples": {
                            "application/json": {
                                "result": 0,
                                "product": "Example System",
                                "version": "1.0.0"
                            }
                        }
                    }
                }
            }
        },
