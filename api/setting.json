                    {
                        "name": "serviceId",
                        "description": "サービスID。",
                        "in": "formData",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "date",
                        "description": "RFC3339形式の日付。 例: 2014-01-01T00:00:00+0900",
                        "in": "formData",
                        "required": true,
                        "type": "string",
                        "format": "date-time"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "",
                        "schema": {
                            "$ref": "#/definitions/PutSettingResponse"
                        },
                        "examples": {
                            "application/json": {
